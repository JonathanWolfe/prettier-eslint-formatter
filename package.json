{
	"name": "prettier-eslint-formatter",
	"displayName": "Prettier Eslint Formatter",
	"description": "Formats code using Prettier then ESLint --fix",
	"repository": {
		"type": "git",
		"url": "https://github.com/JonathanWolfe/prettier-eslint-formatter.git"
	},
	"bugs": {
		"url": "https://github.com/JonathanWolfe/prettier-eslint-formatter/issues"
	},
	"version": "1.0.5",
	"license": "MIT",
	"publisher": "jonwolfe",
	"author": "Jon Wolfe <@_JonWolfe>",
	"galleryBanner": {
		"color": "#56b6b7",
		"theme": "dark"
	},
	"homepage": "https://marketplace.visualstudio.com/items?itemName=jonwolfe.prettier-eslint-formatter",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Formatters"
	],
	"keywords": [
		"eslint",
		"prettier",
		"prettier-eslint",
		"format"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"icon": "icon.png",
	"main": "./dist/extension.js",
	"capabilities": {
		"virtualWorkspaces": true,
		"untrustedWorkspaces": {
			"supported": "limited",
			"description": "Not offically supported, but good luck.",
			"restrictedConfigurations": [
				"prettier-eslint-formatter.documentSelectors",
				"prettier-eslint-formatter.resolveGlobalModules",
				"prettier-eslint-formatter.ignorePath",
				"prettier-eslint-formatter.prettierPath",
				"prettier-eslint-formatter.configPath",
				"prettier-eslint-formatter.useEditorConfig",
				"prettier-eslint-formatter.resolveGlobalModules",
				"prettier-eslint-formatter.withNodeModules"
			]
		}
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Prettier ESLint Formatter",
			"properties": {
				"prettier-eslint-formatter.documentSelectors": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"markdownDescription": "Additional document types to format",
					"scope": "window"
				},
				"prettier-eslint-formatter.enable": {
					"type": "boolean",
					"default": true,
					"markdownDescription": "Enable Prettier Eslint Formatter",
					"scope": "resource"
				},
				"prettier-eslint-formatter.enableDebugLogs": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Enable debug logging",
					"scope": "resource"
				}
			}
		},
		"commands": [
			{
				"command": "prettier-eslint-formatter.forceFormatDocument",
				"title": "Force a document to be formatted with Prettier ESLint Formatter",
				"when": "editorFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "yarn run esbuild-base -- --sourcemap",
		"esbuild-watch": "yarn run esbuild-base -- --sourcemap --watch",
		"esbuild-analyze": "yarn run esbuild -- --metafile=meta.json && esbuild-visualizer --metadata ./meta.json --exclude *.png",
		"test-compile": "tsc -p ./",
		"release": "standard-version && git push --follow-tags origin main && vsce publish"
	},
	"dependencies": {
		"find-up": "^4.1.0",
		"resolve": "^1.21.0"
	},
	"devDependencies": {
		"@types/eslint": "^7.0.0",
		"@types/glob": "^7.2.0",
		"@types/node": "14.x",
		"@types/prettier": "^2.4.3",
		"@types/resolve": "^1.20.1",
		"@types/semver": "^7.3.9",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"esbuild": "^0.14.11",
		"esbuild-visualizer": "^0.3.1",
		"eslint": "^7.32.0",
		"glob": "^7.2.0",
		"prettier": "^2.5.1",
		"standard-version": "^9.3.2",
		"typescript": "^4.5.4"
	}
}
